{
  "name": "server",
  "version": "1.0.0",
  "description": "API do Amigo Ocuto",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --exec ts-node src/server.ts",
    "lint": "npm-run-all lint:eslint lint:types",
    "lint:eslint": "eslint src/**/*.ts --max-warnings=0",
    "lint:types": "tsc --project tsconfig.test.json --noEmit",
    "test": "node --test --test-concurrency=1 --import ts-node/register --import ./tests/setupEnv.ts tests",
    "test:unit": "node --test --test-concurrency=1 --import ts-node/register --import ./tests/setupEnv.ts tests/unit",
    "test:integration": "node --test --test-concurrency=1 --import ts-node/register --import ./tests/setupEnv.ts tests/integration",
    "format": "eslint --fix 'src/**/*.{ts,tsx}'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.10",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.9.2",
    "@types/nodemailer": "^7.0.3",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
